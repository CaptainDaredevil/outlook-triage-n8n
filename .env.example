# --- Required credentials ---
OPENAI_API_KEY=your_key_here
# e.g. gpt-4o-mini / gpt-4.1-mini
OPENAI_MODEL=gpt-4o-mini

OUTLOOK_CLIENT_ID=your_outlook_app_id
OUTLOOK_TENANT_ID=your_tenant_id
OUTLOOK_CLIENT_SECRET=your_secret
OUTLOOK_REFRESH_TOKEN=your_refresh_token

TELEGRAM_BOT_TOKEN=123456:ABC...
TELEGRAM_CHAT_ID=000000000

# --- Optional behaviour ---
OUTLOOK_FOLDER_ID=Inbox
ALERT_THRESHOLD=critical        # critical | normal | low
DEMO_MODE=false                 # true/false

# --- n8n runtime (important) ---
N8N_ENCRYPTION_KEY=change_me_to_a_long_random_string_32+chars
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin_change_me

# keep logs lean & private (recommended for email content)
EXECUTIONS_DATA_SAVE_ON_SUCCESS=none
EXECUTIONS_DATA_SAVE_ON_ERROR=none
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=false
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168     # hours; 7 days
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_HIRING_BANNER_ENABLED=false

# convenience
TZ=Europe/Bratislava
